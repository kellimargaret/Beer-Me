        <!-- Header -->
        <header>
            <div class="container">
                <div class="intro-text">
                    <div class="intro-lead-in">It's About Time You Buy Your Friend</div>
                    <div class="intro-heading">a Damn Beer.</div>
                </div>
            </div>
        </header>

        <!-- Sign In-->
        <section id="sign-in">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12">
                {% if sign_in == true %}

                    <h2 class="section-heading">Log in to your account.</h2>

                    <form action="/login" method="get">
                        <div class="col-xs-3">
                            <input class="form-control" placeholder="User Email or Bar Name" id="username" name="username" type="text" required>

                        </div>
                        <button type="submit" class="page-scroll btn btn-xl">Sign In</button>
                    </form>
                    </div>
                </div>

                <!-- Sign Up -->
                {% elseif sign_up == true %}


                    <a href='/show_customer_signup'><h2>Create a customer account.</h2></a>
                    {% if customer_signup == true %}
                    <form action="/customer_signup" method="post">
                        <div class="col-xs-3">
                            <input class="form-control input-lg" placeholder="Name" id="username" name="username" type="text" required>
                        </div>
                        <div class="col-xs-3">
                            <input class="form-control input-lg" placeholder="Email Address" id="email" name="email" type="text" required>
                        </div>
                        <button type="submit" class="page-scroll btn btn-xl">Sign Up</button>
                    </form>
                    {% endif %}

                    <br>
                    <a href='/show_business_signup'><h2>Create a business account.</h2></a>
                    {% if business_signup == true %}
                <div class="border-solid">
                    <form action="/business_signup" method="post">

                            <label for="name">Enter the business name:</label>
                            <input class="form-control input-lg" placeholder="Business Name" id="name" name="name" type="text" required></br>

                            <label for="phone">Enter a phone number:</label>
                            <input class="form-control input-lg" placeholder="555-555-5555" id="phone" name="phone" type="text" required></br>

                            <label for="address">Enter an address</label>
                            <input class="form-control input-lg" placeholder="123 Street Ave." id="address" name="address" type="text" required></br>

                            <label for="website">Enter the website</label>
                            <input class="form-control input-lg" placeholder="www.yourbusiness.com" id="website" name="website" type="text" required></br>

                        </br><button type="submit" class="page-scroll btn btn-xl">Sign Up</button>
                    </form>
                </div>
                    {% endif %}

